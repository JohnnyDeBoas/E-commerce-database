<p id="notice" class="text-dark"><%= notice %></p>
<div class="d-flex justify-content-between p-4 ">
    <h1 class="text-dark">Productss</h1>
    <%= link_to '<i class="fas fa-plus fa-lg pe-3"></i> Add Product'.html_safe, new_product_path, class:'btn btn-primary text-white p-4' %>
</div>
<table id="order_tables" class="table table-hover table-success ">
  <thead class="table table-hover table-danger">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Sku</th>
      <th>In inventory</th>
      <th>Status</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td class="text-center"><%= product.name%></td>
        <td>R$ <%= product.price%></td>
        <td><%= product.description %></td>
        <td><%= product.sku %></td>
        <td class="text-center" ><%= product.in_inventory%></td>
        <td><%= available_icon(product)%></td>
        <td><%= category_icon(product) %></td>
        <td  class="pt-3">
          <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_product_path(id: product.id), class: 'fs-4'%> 
          <%= link_to '<i class="fas fa-trash"></i>'.html_safe, @products[index], method: "delete", data: {confirm: "Are you sure you want to delete this order?"}, class: 'fs-4  px-2'%> 
          <%= link_to '<i class="fas fa-eye"></i>'.html_safe, @products[index], method: "get", class: 'fs-4' %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<script>
  $(document).ready(function() {
    var oTable = $("#order_tables").DataTable({
      order: [[1, 'asc']],
    })
  });
</script>
